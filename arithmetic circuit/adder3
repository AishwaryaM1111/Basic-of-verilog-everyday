module top_module( 
    input [2:0] a, b,
    input cin,
    output [2:0] cout,
    output [2:0] sum );
    
    fa inst1(a[0],b[0],cin,cout[0],sum[0]);
    fa inst2(a[1],b[1],cout[0],cout[1],sum[1]);
    fa inst3(a[2],b[2],cout[1],cout[2],sum[2]);

endmodule

module fa( 
    input x,y,z,
    output c,s );
    
    assign c = x&y|y&z|z&x;
    assign s = x^y^z;

endmodule
